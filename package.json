{
  "name": "local-playground",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "npm run prisma:generate && react-router build",
    "dev": "react-router dev",
    "prisma:generate": "prisma generate",
    "start": "react-router-serve ./build/server/index.js",
    "desktop:renderer:dev": "vite --force --config desktop/renderer/vite.config.ts",
    "desktop:renderer:build": "vite build --config desktop/renderer/vite.config.ts",
    "desktop:electron:dev": "cross-env DESKTOP_MODE=development electron ./desktop/electron/main.cjs",
    "desktop:electron:prod": "cross-env DESKTOP_MODE=production electron ./desktop/electron/main.cjs",
    "desktop:dev": "concurrently -k -n web,electron \"react-router dev --port 5173 --strictPort\" \"wait-on http://localhost:5173 && npm run desktop:electron:dev\"",
    "desktop:build": "npm run build",
    "desktop:start": "npm run desktop:build && npm run desktop:electron:prod",
    "desktop:package": "npm run build && electron-builder --config electron-builder.yml --publish never",
    "desktop:package:mac": "npm run build && electron-builder --config electron-builder.yml --mac dmg zip --publish never",
    "desktop:package:win": "npm run build && electron-builder --config electron-builder.yml --win nsis --publish never",
    "dev:db:init": "node scripts/dev-db-init.mjs",
    "skill:enable": "node scripts/enable-local-playground-skill.mjs",
    "typecheck": "npm run prisma:generate && react-router typegen && tsc",
    "test": "npm run prisma:generate && vitest run",
    "test:watch": "vitest",
    "verify:chat-attachments": "node scripts/verify-chat-attachments.mjs"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@fluentui/react-components": "^9.73.0",
    "@microsoft/workiq": "^0.2.8",
    "@openai/agents": "^0.4.14",
    "@prisma/client": "^6.16.3",
    "@react-router/node": "7.13.0",
    "@react-router/serve": "7.13.0",
    "electron-updater": "^6.8.3",
    "isbot": "^5.1.35",
    "openai": "^6.22.0",
    "react": "^19.2.4",
    "react-diff-view": "^3.3.2",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-native-web": "^0.21.2",
    "react-router": "7.13.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@react-router/dev": "7.13.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "prisma": "^6.16.3",
    "react-native": "^0.84.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
