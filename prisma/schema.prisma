generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AzureSelectionPreference {
  tenantId       String   @id
  projectId      String
  deploymentName String
  updatedAt      DateTime
}

model McpServerProfile {
  id             String   @id
  sortOrder      Int
  configKey      String   @unique
  name           String
  transport      String
  url            String?
  headersJson    String?
  useAzureAuth   Boolean  @default(false)
  azureAuthScope String?
  timeoutSeconds Int?
  command        String?
  argsJson       String?
  cwd            String?
  envJson        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([sortOrder])
}
